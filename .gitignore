*.bak
*.backup
*.orig

# Merge conflict files
*.rej

# Documentation builds
docs/_build/

# Cache directories
.cache/
.parcel-cache/
.eslintcache
.stylelintcache

# TypeScript
*.tsbuildinfo

# Optional npm cache directory
.npm

